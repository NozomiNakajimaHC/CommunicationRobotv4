{
  "name": "ai-avatar-chat-app",
  "version": "1.0.0",
  "description": "WebRTCを使用したOpenAIリアルタイム音声APIによるアバター会話アプリ",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js"
  },
  "keywords": [
    "openai",
    "webrtc",
    "avatar",
    "voice",
    "chat"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "openai": "^4.28.0",
    "socket.io": "^4.5.4"
  },
  "devDependencies": {
    "nodemon": "^2.0.22"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}

// .env
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_WEBRTC_URL=https://api.openai.com/v1/audio/webrtc
PORT=3000

// .gitignore
node_modules/
.env
.DS_Store
npm-debug.log
yarn-error.log
.vscode/

// netlify.toml
[build]
  command = "npm install"
  publish = "public"
  functions = "functions"

[dev]
  command = "npm run dev"

[[redirects]]
  from = "/api/*"
  to = "/.netlify/functions/:splat"
  status = 200

[[redirects]]
  from = "/*"
  to = "/index.html"
  status = 200
